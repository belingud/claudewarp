/* dark.qss - Modern Dark Theme */

/* Global Settings */
QWidget {
    background-color: #1e1f22; /* Near-black, slightly blue-ish */
    color: #e0e1e1; /* Light grey for text */
    font-family: "Segoe UI", "Roboto", "Helvetica Neue", "Arial", sans-serif;
    border: none;
}

/* Main Window and Base Widgets */
QMainWindow, QFrame, QGroupBox, QScrollArea, QDialog {
    background-color: #1e1f22;
    color: #e0e1e1;
}

/* Card Widget from QFluentWidgets */
CardWidget {
    background-color: #28292e; /* Slightly lighter than base */
    border-radius: 8px;
    border: 1px solid #3a3b40;
}

/* Buttons */
QPushButton {
    background-color: #3a3c41;
    color: #f0f1f1;
    padding: 8px 16px;
    border-radius: 5px;
    font-weight: 500;
}

QPushButton:hover {
    background-color: #4a4d52;
}

QPushButton:pressed {
    background-color: #2a2c30;
}

/* Primary Button Style */
PrimaryPushButton, QPushButton[class="PrimaryPushButton"], QPushButton[styleClass="primary"] {
    background-color: #0078d4; /* A vibrant blue */
    color: white;
    font-weight: 600;
}

PrimaryPushButton:hover, QPushButton[class="PrimaryPushButton"]:hover, QPushButton[styleClass="primary"]:hover {
    background-color: #1085e4;
}

PrimaryPushButton:pressed, QPushButton[class="PrimaryPushButton"]:pressed, QPushButton[styleClass="primary"]:pressed {
    background-color: #006ac4;
}

/* Input Fields */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #28292e;
    color: #e0e1e1;
    border: 1px solid #3a3b40;
    border-radius: 5px;
    padding: 6px;
    selection-background-color: #0078d4;
    selection-color: white;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border: 1px solid #0078d4;
}

/* Labels */
QLabel, TitleLabel, StrongBodyLabel, BodyLabel, CaptionLabel {
    background-color: transparent;
    color: #e0e1e1;
}

/* Table Widget */
QTableWidget {
    background-color: #28292e;
    color: #e0e1e1;
    gridline-color: #3a3b40;
    selection-background-color: #0078d4;
    selection-color: white;
    border-radius: 8px;
}

QHeaderView::section {
    background-color: #3a3c41;
    color: #f0f1f1;
    padding: 8px;
    border: none;
    border-bottom: 1px solid #4a4d52;
}

/* Menu Bar and Menu */
QMenuBar {
    background-color: #28292e;
    color: #e0e1e1;
    border-bottom: 1px solid #3a3b40;
}

QMenuBar::item {
    background: transparent;
    padding: 6px 12px;
}

QMenuBar::item:selected {
    background-color: #3a3c41;
}

QMenu {
    background-color: #28292e;
    color: #e0e1e1;
    border: 1px solid #3a3b40;
    border-radius: 5px;
}

QMenu::item {
    padding: 8px 24px;
}

QMenu::item:selected {
    background-color: #0078d4;
    color: white;
}

/* ComboBox */
QComboBox {
    background-color: #28292e;
    border: 1px solid #3a3b40;
    border-radius: 5px;
    padding: 6px;
}

QComboBox:hover {
    border-color: #4a4d52;
}

QComboBox::drop-down {
    border: none;
}

QComboBox QAbstractItemView {
    background-color: #28292e;
    border: 1px solid #3a3b40;
    selection-background-color: #0078d4;
    color: #e0e1e1;
}

/* ScrollBar */
QScrollBar:vertical {
    background: #1e1f22;
    width: 12px;
    margin: 0;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background: #4a4d52;
    min-height: 25px;
    border-radius: 6px;
}

QScrollBar::handle:vertical:hover {
    background: #5a5d62;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0;
    background: none;
}

QScrollBar:horizontal {
    background: #1e1f22;
    height: 12px;
    margin: 0;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background: #4a4d52;
    min-width: 25px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal:hover {
    background: #5a5d62;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0;
    background: none;
}

/* Splitter */
QSplitter::handle {
    background-color: #3a3b40;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

QSplitter::handle:hover {
    background-color: #0078d4;
}