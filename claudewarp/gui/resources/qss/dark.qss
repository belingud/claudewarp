/* dark.qss - Modern & Refined Dark Theme */

/* Global Settings */
QWidget {
    background-color: #212529; /* A deep, neutral dark grey */
    color: #f8f9fa; /* Soft white for text */
    border: none;
}

/* Main Window and Base Widgets */
QMainWindow, QFrame, QGroupBox, QScrollArea, QDialog {
    background-color: #212529;
    color: #f8f9fa;
}

/* Card Widget from QFluentWidgets */
CardWidget {
    background-color: #343a40; /* A lighter shade of the base */
    border-radius: 12px; /* Consistent larger radius */
    border: 1px solid #495057; /* Softer border */
}

/* Buttons */
QPushButton {
    background-color: #495057; /* A subtle grey */
    color: #f8f9fa;
    padding: 10px 20px;
    border-radius: 8px;
    border: none;
    font-weight: 600;
}

QPushButton:hover {
    background-color: #6c757d;
}

QPushButton:pressed {
    background-color: #343a40;
}

/* Primary Button Style */
PrimaryPushButton, QPushButton[class="PrimaryPushButton"], QPushButton[styleClass="primary"] {
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 700;
}

PrimaryPushButton:hover, QPushButton[class="PrimaryPushButton"]:hover, QPushButton[styleClass="primary"]:hover {
    background-color: #0069d9;
}

PrimaryPushButton:pressed, QPushButton[class="PrimaryPushButton"]:pressed, QPushButton[styleClass="primary"]:pressed {
    background-color: #0056b3;
}

/* Input Fields */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #343a40;
    color: #f8f9fa;
    border: 1px solid #495057;
    border-radius: 8px;
    padding: 8px 12px;
    selection-background-color: #007bff;
    selection-color: white;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border: 1px solid #007bff;
}

/* Labels */
QLabel, TitleLabel, StrongBodyLabel, BodyLabel, CaptionLabel {
    background-color: transparent;
    color: #e0e1e1;
}

/* Table Widget */
QTableWidget {
    background-color: #343a40;
    color: #f8f9fa;
    gridline-color: #495057;
    selection-background-color: #007bff;
    selection-color: white;
    border-radius: 12px;
    border: 1px solid #495057;
}

QHeaderView::section {
    background-color: #212529;
    color: #ced4da;
    padding: 12px 8px;
    border: none;
    border-bottom: 1px solid #495057;
    font-weight: 600;
}

/* Menu Bar and Menu */
QMenuBar {
    background-color: #28292e;
    color: #e0e1e1;
    border-bottom: 1px solid #3a3b40;
}

QMenuBar::item {
    background: transparent;
    padding: 6px 12px;
}

QMenuBar::item:selected {
    background-color: #3a3c41;
}

QMenu {
    background-color: #28292e;
    color: #e0e1e1;
    border: 1px solid #3a3b40;
    border-radius: 5px;
}

QMenu::item {
    padding: 8px 24px;
}

QMenu::item:selected {
    background-color: #0078d4;
    color: white;
}

/* ComboBox */
QComboBox {
    background-color: #343a40;
    border: 1px solid #495057;
    border-radius: 8px;
    padding: 8px 12px;
}

QComboBox:hover {
    border-color: #6c757d;
}

QComboBox::drop-down {
    border: none;
}

QComboBox QAbstractItemView {
    background-color: #343a40;
    border: 1px solid #495057;
    selection-background-color: #007bff;
    color: #f8f9fa;
    border-radius: 8px;
}

/* ScrollBar */
QScrollBar:vertical {
    background: transparent;
    width: 10px;
    margin: 0;
    border-radius: 5px;
}

QScrollBar::handle:vertical {
    background: #495057;
    min-height: 30px;
    border-radius: 5px;
}

QScrollBar::handle:vertical:hover {
    background: #6c757d;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0;
    background: none;
}

QScrollBar:horizontal {
    background: transparent;
    height: 10px;
    margin: 0;
    border-radius: 5px;
}

QScrollBar::handle:horizontal {
    background: #495057;
    min-width: 30px;
    border-radius: 5px;
}

QScrollBar::handle:horizontal:hover {
    background: #6c757d;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0;
    background: none;
}

/* Splitter */
QSplitter::handle {
    background-color: #3a3b40;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

QSplitter::handle:hover {
    background-color: #0078d4;
}