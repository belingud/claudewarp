/* bright.qss - Modern & Refined Bright Theme */

/* Global Settings */
QWidget {
    background-color: #f8f9fa; /* A softer, more neutral light grey */
    color: #212529; /* Standard dark grey for better readability */
    font-family: "Segoe UI", "Roboto", "Helvetica Neue", "Arial", sans-serif;
    border: none;
}

/* Main Window and Base Widgets */
QMainWindow, QFrame, QGroupBox, QScrollArea, QDialog {
    background-color: #f8f9fa;
    color: #212529;
}

/* Card Widget from QFluentWidgets */
CardWidget {
    background-color: #ffffff; /* Pure white for cards to stand out */
    border-radius: 12px; /* Larger radius for a modern look */
    border: 1px solid #dee2e6; /* Softer border color */
}

/* Buttons */
QPushButton {
    background-color: #e9ecef; /* A subtle light grey */
    color: #212529;
    padding: 10px 20px; /* More padding for a better feel */
    border-radius: 8px; /* Consistent with CardWidget */
    border: none; /* Flatter design */
    font-weight: 600; /* Slightly bolder */
}

QPushButton:hover {
    background-color: #dee2e6; /* A bit darker on hover */
}

QPushButton:pressed {
    background-color: #ced4da; /* Even darker when pressed */
}

/* Primary Button Style */
PrimaryPushButton, QPushButton[class="PrimaryPushButton"], QPushButton[styleClass="primary"] {
    background-color: #007bff; /* A more modern, vibrant blue */
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 700; /* Bolder for primary action */
}

PrimaryPushButton:hover, QPushButton[class="PrimaryPushButton"]:hover, QPushButton[styleClass="primary"]:hover {
    background-color: #0069d9;
}

PrimaryPushButton:pressed, QPushButton[class="PrimaryPushButton"]:pressed, QPushButton[styleClass="primary"]:pressed {
    background-color: #0056b3;
}

/* Input Fields */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #ffffff;
    color: #212529;
    border: 1px solid #ced4da;
    border-radius: 8px; /* Consistent with buttons */
    padding: 8px 12px; /* More vertical padding */
    selection-background-color: #007bff;
    selection-color: white;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border: 1px solid #007bff; /* Use the primary color for focus */
}

/* Labels */
QLabel, TitleLabel, StrongBodyLabel, BodyLabel, CaptionLabel {
    background-color: transparent;
    color: #1f2937;
}

/* Table Widget */
QTableWidget {
    background-color: #ffffff;
    color: #212529;
    gridline-color: #dee2e6; /* Softer grid lines */
    selection-background-color: #007bff;
    selection-color: white;
    border-radius: 12px; /* Consistent with CardWidget */
    border: 1px solid #dee2e6;
}

QHeaderView::section {
    background-color: #f8f9fa; /* Match global background */
    color: #495057; /* Slightly lighter header text */
    padding: 12px 8px; /* More padding */
    border: none;
    border-bottom: 1px solid #dee2e6;
    font-weight: 600;
}

/* Menu Bar and Menu */
QMenuBar {
    background-color: #ffffff;
    color: #1f2937;
    border-bottom: 1px solid #e5e7eb;
}

QMenuBar::item {
    background: transparent;
    padding: 6px 12px;
}

QMenuBar::item:selected {
    background-color: #e5e7eb;
}

QMenu {
    background-color: #ffffff;
    color: #1f2937;
    border: 1px solid #d1d5db;
    border-radius: 5px;
}

QMenu::item {
    padding: 8px 24px;
}

QMenu::item:selected {
    background-color: #0078d4;
    color: white;
}

/* ComboBox */
QComboBox {
    background-color: #ffffff;
    border: 1px solid #ced4da;
    border-radius: 8px;
    padding: 8px 12px;
}

QComboBox:hover {
    border-color: #adb5bd;
}

QComboBox::drop-down {
    border: none;
}

QComboBox QAbstractItemView {
    background-color: #ffffff;
    border: 1px solid #ced4da;
    selection-background-color: #007bff;
    color: #212529;
    border-radius: 8px;
}

/* ScrollBar */
QScrollBar:vertical {
    background: transparent; /* Make it less intrusive */
    width: 10px;
    margin: 0;
    border-radius: 5px;
}

QScrollBar::handle:vertical {
    background: #ced4da;
    min-height: 30px;
    border-radius: 5px;
}

QScrollBar::handle:vertical:hover {
    background: #adb5bd;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0;
    background: none;
}

QScrollBar:horizontal {
    background: transparent;
    height: 10px;
    margin: 0;
    border-radius: 5px;
}

QScrollBar::handle:horizontal {
    background: #ced4da;
    min-width: 30px;
    border-radius: 5px;
}

QScrollBar::handle:horizontal:hover {
    background: #adb5bd;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0;
    background: none;
}

/* Splitter */
QSplitter::handle {
    background-color: #d1d5db;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

QSplitter::handle:hover {
    background-color: #0078d4;
}